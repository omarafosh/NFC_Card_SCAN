# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=nfc_discount_system

# Security - REQUIRED
# Generate a strong random secret (at least 32 characters)
# You can generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# Environment
NODE_ENV=development

# Admin Auto-Creation (Development Only)
ALLOW_AUTO_ADMIN=false

# WebSocket Configuration (Legacy - Local Only)
WS_PORT=8999

# Supabase Configuration (Phase 4 - Global Scalability)
# Get these from your Supabase Project Settings -> API
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# NFC Reader Configuration
# Terminal and Branch IDs for the NFC reader
TERMINAL_ID=1
BRANCH_ID=1

# Scan Events Cleanup
# How long to keep scan events in the database (in hours)
SCAN_EVENTS_RETENTION_HOURS=24
