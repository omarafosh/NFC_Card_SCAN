# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=nfc_discount_system

# Security - REQUIRED
# Generate a strong random secret (at least 32 characters)
# You can generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# Environment
NODE_ENV=development

# Admin Auto-Creation (Development Only)
# Set to 'true' only in development to allow auto-creation of admin account
# NEVER set this to 'true' in production
ALLOW_AUTO_ADMIN=false

# Database SSL (Production)
# Uncomment and set if using SSL for database connection
# DB_SSL_CA=/path/to/ca-certificate.pem

# WebSocket Configuration
WS_PORT=8999
